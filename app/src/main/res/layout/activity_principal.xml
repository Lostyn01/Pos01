<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:title=""/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/opcoes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="OPÇÕES   "
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SORTEIOS   "
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="OUTROS  "
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:elevation="10dp"
                            app:cardCornerRadius="2.0dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#919191" />



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#2196F3" />


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:id="@+id/sorteio"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2021-07-22 12:03:00"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:background="#ffeaeaea" />

                                <TextView
                                    android:id="@+id/dataini"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="10.50"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />




                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:elevation="10dp"
                            app:cardCornerRadius="2.0dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#919191" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#2196F3" />


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Kuadra"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:background="#ffeaeaea" />

                                <TextView
                                    android:id="@+id/kuadra"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="10.50"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:elevation="10dp"
                            app:cardCornerRadius="2.0dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#919191" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#2196F3" />


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="kina"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:background="#ffeaeaea" />

                                <TextView
                                    android:id="@+id/kina"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="10.50"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:elevation="10dp"
                            app:cardCornerRadius="2.0dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#919191" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#2196F3" />


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="keno"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:background="#ffeaeaea" />

                                <TextView
                                    android:id="@+id/keno"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="10.50"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="9.9"
                            android:elevation="10dp"
                            app:cardCornerRadius="2.0dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#919191" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#2196F3" />


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="doação"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:background="#ffeaeaea" />

                                <TextView
                                    android:id="@+id/doacao"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="10.50"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:elevation="10dp"
                            app:cardCornerRadius="2.0dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#919191" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#2196F3" />


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="PROXIMO"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:background="#ffeaeaea" />

                                <TextView
                                    android:id="@+id/proximo"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="EM 11 MINUTOS"
                                    android:textAllCaps="true"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="1"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="2"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="3"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="5"
                            android:textSize="16dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn10"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="10"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn15"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="15"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn20"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="20"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn25"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="25"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn30"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="30"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn40"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="40"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn50"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="50"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn60"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shapelinear1"
                            android:text="60"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/activity_loading" />
    </RelativeLayout>


</RelativeLayout>